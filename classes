using namespace std;
class EMPLOYEE {
public:
	int number;
	string name;
	float salary;
	void pirnt() {
		cout << "number-" << number << "\n" << "name-" << name << "\n" << "salary-" << salary << "\n";
	}
	void introduse() {
		cout << "number" << "\n";
		cin >> number;
		cout << "name" << "\n";
		cin >> name;
		cout << "salary" << "\n";
		cin >>salary;
	}};
int main(){
	EMPLOYEE student;
	student.introduse();
	student.pirnt();


